<div ng-controller="CKFormController">
    <form class="form-horizontal" cg-busy="loadingPromise" ng-init="form_id='{{ id }}'">
        {% for item in formItems %}
            {{ item.render()|raw }}
        {% endfor %}
        <a class="btn btn-primary" ng-click="saveValues()">Save</a>
    </form>
    <div class="debug">
        <h4>Output:</h4>
        <pre>
            {% verbatim %}
{{ formItems | json }}
            {% endverbatim %}
        </pre>
        <h4>Input:</h4>
        <pre>
{{ formItems |json_encode(constant('JSON_PRETTY_PRINT')) }}
        </pre>
    </div>
</div>
